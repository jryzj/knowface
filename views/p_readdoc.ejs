
<div id="p_readdoc_div" class="mt-3">
    <div class="row mt-4">
        <div class="col">
            <label class="col-label">文档编号 :</label><span class="m-2 border rounded p-2" id="p_readdoc_span_docname"><%=docname%></span>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <label class="col-label">姓名 :</label> <span class="m-2 border rounded p-2" id="p_readdoc_input_name"><%=name%></span>
        </div>

        <div class="col">
            <label class="col-label">失联地点 :</label>
            <span class="m-2 border rounded p-2" id="p_readdoc_span_location"><%=location%></span>
        </div>

        <div class="col">
            <label class="col-label">失联时间 :</label>
            <span class="m-2 border rounded p-2" id="p_readdoc_span_date"><%=date%></span>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
        <label class="col-label my-2">相貌特征 :</label><br>
        <p class="border rounded p-2 mt-2" id="p_readdoc_p_appearance" style="width:100%"><%=appearance%></p>
        <label class="col-label my-2">失联情况 :</label><br>
        <p class="border rounded p-2 mt-2" id="p_readdoc_p_descripttion" style="width:100%" ><%=description%></p>
        </div>
    </div>
    <div class="d-flex justify-content-around mt-5">
        <button type="button" class="btn btn-outline-secondary" id="p_readdoc_btn_updatedoc">更新档案</button>
        <button type="button" class="btn btn-outline-secondary" id="p_readdoc_btn_deldoc">删除档案</button>
        <button type="button" class="btn btn-outline-secondary" id="p_readdoc_btn_exit">退出</button>
    </div>

    <div>
        <div class="col-10 row offset-1 my-5" id="p_readdoc_div_photos">
            <% photourls.forEach(photourl => {%>
            <div class="col-12 col-md-3 photo" style="padding:1rem">
                <div class="img-thumbnail" style="width:100%;height:0;padding-bottom: 100%;overflow:hidden">
                    <img class="card-img-top" src="<%=photourl%>" alt="Card image cap">
                </div>
            </div>
            <%})%>
        </div>

    </div>

</div>


<div class="modal fade" id="p_readdoc_modal_deldoc" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">退出</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                确认删除档案吗？
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="p_readdoc_btn_exitconfirm">确认</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">不确认</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="p_readdoc_modal_error" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">错误</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                操作错误，请重试？
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">确认</button>
            </div>
        </div>
    </div>
</div>

